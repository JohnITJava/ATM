<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import com.sun.javafx.scene.control.skin.IntegerField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>

<VBox fx:id="mainBox" stylesheets="/stylesheet.css" xmlns="http://javafx.com/javafx/8.0.112"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.griddynamics.controller.AdminInterfaceController">
    <HBox>
        <VBox>
            <HBox>
            <Button fx:id="checkBalBut" onAction="#checkUserBal">Check User Balance</Button>
            <Button fx:id="checkOperBut" onAction="#checkUserOper">Get Last Operations</Button>
            </HBox>
            <TextArea fx:id="resultA" editable="false"/>
            <Button fx:id="logOffBut" onAction="#logOffSystem">Logging OFF</Button>
        </VBox>
        <VBox>
        <Label text="User's List"/>
        <ListView fx:id="clientsList" minWidth="100" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20" right="20.0" top="20.0" />
    </padding>
</VBox>
